<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scannerRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <!-- Scanner content -->
    <LinearLayout
        android:id="@+id/scannerContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Top bar with close -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="8dp"
            android:paddingEnd="16dp"
            android:paddingTop="48dp"
            android:paddingBottom="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnClose"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:icon="@drawable/ic_close_24"
                app:iconTint="?attr/colorOnSurface"
                app:iconSize="24dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Skenovať prezenčku"
                android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nasmerujte kameru na QR kód učiteľa"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:paddingBottom="16dp" />

        <!-- Camera preview -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="100dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/black">

            <com.journeyapps.barcodescanner.DecoratedBarcodeView
                android:id="@+id/barcodeView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:zxing_scanner_layout="@layout/custom_barcode_scanner" />
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <!-- Success overlay -->
    <FrameLayout
        android:id="@+id/successOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorSurface"
        android:visibility="gone"
        android:alpha="0">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingStart="32dp"
            android:paddingEnd="32dp">

            <TextView
                android:id="@+id/successStudentName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Meno študenta"
                android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                android:gravity="center"
                android:paddingBottom="8dp" />

            <TextView
                android:id="@+id/successSubjectName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Predmet"
                android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:gravity="center"
                android:paddingBottom="24dp" />

            <ImageView
                android:id="@+id/successCheckmark"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/baseline_check_circle_24"
                android:scaleType="fitCenter"
                app:tint="@android:color/holo_green_dark"
                android:contentDescription="Úspech" />

            <TextView
                android:id="@+id/successLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prítomný"
                android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
                android:textColor="@android:color/holo_green_dark"
                android:textStyle="bold"
                android:paddingTop="24dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/successCloseBtn"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Zatvoriť"
                app:cornerRadius="24dp" />
        </LinearLayout>
    </FrameLayout>

    <!-- Error overlay -->
    <FrameLayout
        android:id="@+id/errorOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorSurface"
        android:visibility="gone"
        android:alpha="0">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/baseline_assignment_late_24"
                android:scaleType="fitCenter"
                app:tint="?attr/colorError"
                android:contentDescription="Chyba" />

            <TextView
                android:id="@+id/errorLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QR kód expiroval"
                android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
                android:textColor="?attr/colorError"
                android:textStyle="bold"
                android:paddingTop="24dp" />
        </LinearLayout>
    </FrameLayout>

</FrameLayout>
