<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/colorSurface"
    tools:context=".ui.home.HomeFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <!-- Large greeting title -->
    <TextView
        android:id="@+id/titleName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Načítavam..."
        android:textAppearance="@style/TextAppearance.Material3.DisplaySmall"
        android:textStyle="bold"
        android:textColor="?attr/colorOnSurface"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="72dp"
        android:paddingBottom="8dp" />

    <!-- Inline filter row -->
    <LinearLayout
        android:id="@+id/filterCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="4dp"
        android:paddingBottom="12dp"
        android:baselineAligned="false">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="44dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_pill_chip">

            <Spinner
                android:id="@+id/schoolYearSpinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:popupBackground="@drawable/spinner_dropdown_bg"
                android:spinnerMode="dropdown" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="44dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_pill_chip">

            <Spinner
                android:id="@+id/semesterSpinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:popupBackground="@drawable/spinner_dropdown_bg"
                android:spinnerMode="dropdown" />
        </FrameLayout>
    </LinearLayout>

    <!-- Subject list -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/subjectRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="4dp"
        android:paddingBottom="90dp"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:layoutAnimation="@anim/layout_animation_slide_up"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_subject" />

</LinearLayout>
