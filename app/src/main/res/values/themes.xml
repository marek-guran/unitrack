<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme with Material 3 -->
    <style name="Theme.UniTrack" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_light_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_light_onPrimaryContainer</item>
        
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_light_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_light_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_light_onSecondaryContainer</item>
        
        <!-- Tertiary colors -->
        <item name="colorTertiary">@color/md_theme_light_tertiary</item>
        <item name="colorOnTertiary">@color/md_theme_light_onTertiary</item>
        <item name="colorTertiaryContainer">@color/md_theme_light_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/md_theme_light_onTertiaryContainer</item>
        
        <!-- Error colors -->
        <item name="colorError">@color/md_theme_light_error</item>
        <item name="colorOnError">@color/md_theme_light_onError</item>
        <item name="colorErrorContainer">@color/md_theme_light_errorContainer</item>
        <item name="colorOnErrorContainer">@color/md_theme_light_onErrorContainer</item>
        
        <!-- Surface colors -->
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
        <item name="colorSurfaceVariant">@color/md_theme_light_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_light_onSurfaceVariant</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/md_theme_light_background</item>
        <item name="colorOnBackground">@color/md_theme_light_onBackground</item>
        
        <!-- Outline -->
        <item name="colorOutline">@color/md_theme_light_outline</item>
        <item name="colorOutlineVariant">@color/md_theme_light_outlineVariant</item>
        
        <!-- Status bar -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        
        <!-- Enable edge-to-edge -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

        <!-- Smooth window animations -->
        <item name="android:windowAnimationStyle">@style/UniTrack.WindowAnimation</item>
        
        <!-- Material 3 motion and animations -->
        <item name="motionDurationLong1">500</item>
        <item name="motionDurationMedium1">300</item>
        <item name="motionDurationShort1">150</item>
        
        <!-- Shape theming -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.UniTrack.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.UniTrack.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.UniTrack.LargeComponent</item>

        <!-- MaterialCardView default styling -->
        <item name="materialCardViewStyle">@style/Widget.UniTrack.CardView</item>

        <!-- Constrain dialog width on tablets -->
        <item name="alertDialogTheme">@style/Theme.UniTrack.AlertDialog</item>
    </style>

    <!-- Default dialog style (phones: normal sizing) -->
    <style name="Theme.UniTrack.AlertDialog" parent="ThemeOverlay.Material3.Dialog.Alert" />

    <!-- Shape appearances with modern rounded corners -->
    <style name="ShapeAppearance.UniTrack.SmallComponent" parent="ShapeAppearance.Material3.Corner.Medium">
        <item name="cornerSize">16dp</item>
    </style>

    <style name="ShapeAppearance.UniTrack.MediumComponent" parent="ShapeAppearance.Material3.Corner.Large">
        <item name="cornerSize">24dp</item>
    </style>

    <style name="ShapeAppearance.UniTrack.LargeComponent" parent="ShapeAppearance.Material3.Corner.ExtraLarge">
        <item name="cornerSize">28dp</item>
    </style>

    <!-- Liquid glass bottom navigation -->
    <style name="Widget.UniTrack.BottomNav" parent="Widget.Material3.BottomNavigationView">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="itemActiveIndicatorStyle">@style/Widget.UniTrack.BottomNav.ActiveIndicator</item>
        <item name="itemIconTint">@color/bottom_nav_color</item>
        <item name="itemTextColor">@color/bottom_nav_color</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemRippleColor">@android:color/transparent</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="Widget.UniTrack.BottomNav.ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">?attr/colorPrimaryContainer</item>
        <item name="android:alpha">0.5</item>
        <item name="shapeAppearance">@style/ShapeAppearance.UniTrack.SmallComponent</item>
    </style>

    <!-- Clean card style with subtle outline -->
    <style name="Widget.UniTrack.CardView" parent="Widget.Material3.CardView.Filled">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">?attr/colorOutlineVariant</item>
        <item name="cardBackgroundColor">?attr/colorSurfaceContainerLow</item>
    </style>

    <!-- Smooth window animation style -->
    <style name="UniTrack.WindowAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/fade_in</item>
        <item name="android:activityOpenExitAnimation">@anim/fade_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/fade_in</item>
        <item name="android:activityCloseExitAnimation">@anim/fade_out</item>
    </style>

    <!-- Dialog pop animation style -->
    <style name="UniTrack.DialogAnimation" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_pop_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_pop_out</item>
    </style>

    <!-- Grade chip style -->
    <style name="Widget.UniTrack.GradeChip" parent="Widget.Material3.Chip.Suggestion">
        <item name="chipMinHeight">48dp</item>
        <item name="chipMinTouchTargetSize">48dp</item>
        <item name="chipCornerRadius">24dp</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:checkable">true</item>
    </style>
</resources>